    <version>
        <release>0.1.0</release>
        <api>0.1.0</api>
    </version>
    <stability>
        <release>alpha</release>
        <api>alpha</api>
    </stability>
    <license uri="http://www.opensource.org/licenses/bsd-license.php">BSD License</license>
    <notes>
- Added support for 13,13xx,18xx,19xx and international syntax phone numbers
- Removed Validate.php package requirement (its not used within this class)
- Change package.xml to version 2
    </notes>
    <contents>
        <dir name="/">
	        <dir name="Validate">
	            <file name="AU.php" role="php">
	                <tasks:replace from="@PACKAGE-VER@" to="version" type="package-info"/>
	                <tasks:replace from="@DATADIR@" to="data_dir" type="pear-config"/>
	            </file> 
	        </dir> 
	        <dir name="tests">
	        	<file name="validate_AU.phpt" role="test" />
	        </dir> 
	        <dir name="data">
	        	<file name="AU_postcodes.txt" role="data" />
	        </dir> 
	        <file name="LICENSE" role="doc" />
        </dir>
    </contents>
    <dependencies>
        <required>
            <php>
                <min>4.2.0</min>
                <max>6.0.0</max>
            </php>
            <pearinstaller>
                <min>1.4.9</min>
            </pearinstaller>
            <package>
                <name>Validate</name>
                <channel>pear.php.net</channel>
                <min>0.5.0</min>
                <recommended>0.5.0</recommended>
            </package>
        </required>
    </dependencies>
    <phprelease />
